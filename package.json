{
  "name": "smt-z3",
  "displayName": "SMT Z3",
  "description": "VSCode extension for SMT2 language with Z3 solver",
  "icon": "images/logo.png",
  "version": "0.2.3",
  "publisher": "Soaibuzzaman",
  "engines": {
    "vscode": "^1.8.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "smt",
        "aliases": [
          "SMT",
          "smt"
        ],
        "extensions": [
          ".smt",
          ".smt2"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "smt",
        "scopeName": "source.smt",
        "path": "./syntaxes/smt.tmLanguage.json"
      }
    ],
    "configuration": [
      {
        "type": "object",
        "title": "SMT-Z3 Configuration",
        "properties": {
          "smt-z3.timeout": {
            "type": "number",
            "default": 60000,
            "description": "Timeout in milliseconds for SMT-Z3 execution."
          },
          "smt-z3.showCurrentLineCodeLens": {
            "type": "boolean",
            "default": true,
            "description": "Show Execute/Stop CodeLens button on the current line."
          },
          "smt-z3.showSolveTime": {
            "type": "boolean",
            "default": true,
            "description": "Show the timestamp of the last solve operation and the time taken."
          }
        }
      }
    ],
    "commands": [
      {
        "command": "smt2.run",
        "title": "Execute Z3",
        "category": "SMT-Z3"
      },
      {
        "command": "smt2.openSettings",
        "title": "Open Settings",
        "category": "SMT-Z3"
      }
    ]
  },
  "keywords": [
    "smt",
    "smt-lib",
    "z3",
    "smt2",
    "smt2-lib"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/soaibsafi/smt-z3-vscode/.git"
  },
  "author": {
    "email": "soaibuzzaman@uni-weimar.de",
    "name": "Soaibuzzaman"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/soaibsafi/smt-z3-vscode/issues"
  },
  "homepage": "https://github.com/soaibsafi/smt-z3-vscode/#readme",
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.7",
    "@types/node": "20.x",
    "@types/vscode": "^1.8.0",
    "@typescript-eslint/eslint-plugin": "^8.3.0",
    "@typescript-eslint/parser": "^8.3.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.9.1",
    "typescript": "^5.5.4"
  },
  "dependencies": {
    "z3-solver": "^4.15.3"
  }
}